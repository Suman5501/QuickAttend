<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/view_notices_list"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="184dp"
        android:text="view Notices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacher_light_attend"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:text="Light Attend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sheet_form" />

    <Button
        android:id="@+id/sheet_form"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:text="form a sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard" />

    <Button
        android:id="@+id/dashboard"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:text="Take Attendance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_notices_list" />


</androidx.constraintlayout.widget.ConstraintLayout>